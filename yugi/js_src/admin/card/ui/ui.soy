/**
 * The HTML for the monster section of the editor.
 * @param ids The DOM IDs used in this widget.
 */
{template .MONSTER_SECTION}
  <div class="{css yugi-admin-card-fields}{sp}{css yugi-admin-card-subsection}
      {sp}{css goog-inline-block}">

    <!-- Monster Level -->
    <label id="{$ids.MONSTER_LEVEL_LABEL|id}"
        for="{$ids.MONSTER_LEVEL_INPUT|id}"
        class="{css goog-inline-block}{sp}{css yugi-admin-card-level}">
      Level/Rank:
    </label>
    <input id="{$ids.MONSTER_LEVEL_INPUT|id}" class="{css goog-inline-block}
        {sp}{css yugi-admin-card-level}" name="level">
    </input>

    <!-- Monster Effect -->
    <label id="{$ids.MONSTER_EFFECT_LABEL|id}"
        for="{$ids.MONSTER_EFFECT_CHECKBOX|id}"
        class="{css goog-inline-block}{sp}{css yugi-admin-card-effect}">
      Effect Monster:
    </label>
    <input type="checkbox" id="{$ids.MONSTER_EFFECT_CHECKBOX|id}"
        class="{css goog-inline-block}{sp}{css yugi-admin-card-effect}"
        name="effect">
    </input>

    <!-- Attribute -->
    <label id="{$ids.MONSTER_ATTRIBUTE_LABEL|id}"
        for="{$ids.MONSTER_ATTRIBUTE_DIV|id}"
        class="{css yugi-admin-combo-label}{sp}{css goog-inline-block}">
      Attribute:
    </label>
    <div id="{$ids.MONSTER_ATTRIBUTE_DIV|id}" class="{css yugi-admin-combo-container}
        {sp}{css goog-inline-block}">
    </div>

    <!-- Monster Type -->
    <label id="{$ids.MONSTER_TYPE_LABEL|id}" for="{$ids.MONSTER_TYPE_DIV|id}"
        class="{css yugi-admin-combo-label}{sp}{css goog-inline-block}">
      Monster Type:
    </label>
    <div id="{$ids.MONSTER_TYPE_DIV|id}" class="{css yugi-admin-combo-container}
        {sp}{css goog-inline-block}">
    </div>

    <!-- Extra Type -->
    <label id="{$ids.MONSTER_EXTRA_TYPE_LABEL|id}"
        for="{$ids.MONSTER_EXTRA_TYPE_DIV|id}"
        class="{css yugi-admin-combo-label}{sp}{css goog-inline-block}">
      Extra Monster Type:
    </label>
    <div id="{$ids.MONSTER_EXTRA_TYPE_DIV|id}"
        class="{css yugi-admin-combo-container}{sp}{css goog-inline-block}">
    </div>

    <!-- Monster Attack -->
    <label id="{$ids.MONSTER_ATTACK_LABEL|id}"
        for="{$ids.MONSTER_ATTACK_INPUT|id}"
        class="{css goog-inline-block}{sp}{css yugi-admin-card-attack}">
      Attack:
    </label>
    <input id="{$ids.MONSTER_ATTACK_INPUT|id}" class="{css goog-inline-block}
        {sp}{css yugi-admin-card-attack}" name="attack">
    </input>

    <!-- Monster Defense -->
    <label id="{$ids.MONSTER_DEFENSE_LABEL|id}"
        for="{$ids.MONSTER_DEFENSE_INPUT|id}"
        class="{css goog-inline-block}{sp}{css yugi-admin-card-defense}">
      Defense:
    </label>
    <input id="{$ids.MONSTER_DEFENSE_INPUT|id}" class="{css goog-inline-block}
        {sp}{css yugi-admin-card-defense}" name="defense">
    </input>

  </div>
{/template}
