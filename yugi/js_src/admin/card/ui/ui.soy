
{namespace yugi.admin.card.ui.soy}

/**
 * The HTML for the editor.
 * @param formAction The path for the form action.
 * @param ids The DOM IDs used in this widget.
 */
{template .EDITOR}
  <form id="{$ids.FORM|id}" method="POST" enctype="multipart/form-data"
      action="{$formAction}">
    <div class="{css yugi-admin-image-column}{sp}{css goog-inline-block}">

      <input id="{$ids.HIDDEN_KEY_INPUT|id}" type="hidden" name="card_key">
      </input>

      <div id="{$ids.IMAGE_DIV|id}" class="{css yugi-admin-image}">
        <div>
          No Card Image
        </div>
      </div>
      <input id="{$ids.IMAGE_INPUT|id}" type="file" name="image_file"
          class="{css yugi-admin-file-input}">
      </input>
    </div>
    <div id="{$ids.FIELDS_SECTION|id}"
        class="{css yugi-admin-card-fields}{sp}{css goog-inline-block}">
  
      <!-- Name -->
      <label id="{$ids.NAME_LABEL|id}" for="{$ids.NAME_INPUT|id}"
          class="{css goog-inline-block}">
        Name:
      </label>
      <input id="{$ids.NAME_INPUT|id}" name="name"
          class="{css yugi-name-input}{sp}{css goog-inline-block}">
      </input>
      <div id="{$ids.NAME_CHECK_DIV|id}" class="{css yugi-name-check}{sp}
          {css goog-inline-block}">
      </div>
  
      <!-- Description -->
      <label id="{$ids.DESCRIPTION_LABEL|id}" for="{$ids.DESCRIPTION_INPUT|id}"
          class="{css goog-inline-block}">
        Description:
      </label>
      <textarea id="{$ids.DESCRIPTION_INPUT|id}"
          class="{css goog-inline-block}" name="description">
      </textarea>
  
      <!-- Card Type -->
      <label id="{$ids.CARD_TYPE_LABEL|id}" for="{$ids.CARD_TYPE_DIV|id}"
          class="{css yugi-admin-combo-label}{sp}{css goog-inline-block}">
        Card Type:
      </label>
      <div id="{$ids.CARD_TYPE_DIV|id}" class="{css yugi-admin-combo-container}
          {sp}{css goog-inline-block}">
      </div>
    </div>
  </form>
  <div class="{css yugi-admin-buttons}">
    <button id="{$ids.SAVE_BUTTON|id}"
        class="{css yugi-call-to-action}{sp}{css goog-inline-block}">
      Save
    </button>
    <button id="{$ids.CANCEL_BUTTON|id}" class="{css goog-inline-block}">
      Cancel
    </button>
    <button id="{$ids.DELETE_BUTTON|id}"
        class="{css yugi-delete-button}{sp}{css goog-inline-block}">
      Delete
    </button>
  </div>
{/template}


/**
 * The HTML for the spell section of the editor.
 * @param ids The DOM IDs used in this widget.
 */
{template .SPELL_SECTION}
  <div class="{css yugi-admin-card-fields}{sp}{css yugi-admin-card-subsection}
      {sp}{css goog-inline-block}">

    <!-- Spell Type -->
    <label id="{$ids.SPELL_TYPE_LABEL|id}" for="{$ids.SPELL_TYPE_DIV|id}"
        class="{css yugi-admin-combo-label}{sp}{css goog-inline-block}">
      Spell Type:
    </label>
    <div id="{$ids.SPELL_TYPE_DIV|id}" class="{css yugi-admin-combo-container}
        {sp}{css goog-inline-block}">
    </div>
  </div>
{/template}


